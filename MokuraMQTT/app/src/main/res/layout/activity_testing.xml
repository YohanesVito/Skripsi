<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TestingActivity">

    <Button
        android:id="@+id/bt_subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscribe"
        app:layout_constraintEnd_toEndOf="@+id/bt_connect"
        app:layout_constraintStart_toStartOf="@+id/bt_connect"
        app:layout_constraintTop_toBottomOf="@+id/bt_connect" />

    <Button
        android:id="@+id/bt_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="publish user"
        app:layout_constraintEnd_toEndOf="@+id/bt_subscribe"
        app:layout_constraintStart_toStartOf="@+id/bt_subscribe"
        app:layout_constraintTop_toBottomOf="@+id/bt_subscribe" />
</androidx.constraintlayout.widget.ConstraintLayout>